<div class="row center">
    <div class="col-2">
        <div class="card text-center">
            <img id="add-card-img" src="{{this.poster}}" class="card-img-top" alt="...">
            <div id="add-card-body" class="card-body">
                <h3 id="add-card-title" data-title="{{this.title}}" class="card-title">{{this.title}}</h3>
                <h5 id="add-card-date" data-date="{{this.date}}" class="card-title">{{this.date}}</h5>
                <p id="add-card-text" class="card-text">{{this.plot}}</p>
            </div>
        </div>
    </div>
    <div class="col-6">
        <form method="POST" role="form">
            <label for="eventTitle">Enter the name of your movie club!</label>
            <input type="text" class="form-control" id="eventTitle" placeholder="Enter the name of your movie club!">
            <label for="eventTime" aria-placeholder="Enter date for your event">Enter the time for your event</label>
            <input type="time" class="form-control" id="eventTime">
            <label for="eventSubmit">When all of the information is correct, hit submit!</label>
        </form>
        <a id="add-submit" href="#" class="btn btn-primary">Submit</a>
        <a id="add-cancel" href="#" class="btn btn-danger">Cancel</a>
    </div>
</div>