{{!-- Prints out all of the current events to specific cards --}}
<div class="container text-center">
  <h1 class="display-4">Events</h1>
  <p class="lead">Click on event that you want to RSVP to!</p>
</div>
<div class="row col-12 justify-content-md-center">
  {{#each clubs}}
  <div class="col mb-2">
    <div class="card h-100 text-white text-center bg-dark">
      <div class="event-card-body" id={{this.dataValues.id}}>
        <h5 class="card-title">{{this.dataValues.eventTitle}}</h5>
        <h6 class="card-title">Movie: {{this.dataValues.movieTitle}}</h6>
        <p class="card-text">Date: {{this.dataValues.date}}</p>
        <p class="card-text">Time: {{this.dataValues.time}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>